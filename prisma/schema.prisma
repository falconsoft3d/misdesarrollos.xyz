// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  description String
  imageUrl    String
  projectUrl  String
  videoUrl    String?   // URL del video de introducción
  gallery     String?   // JSON array de URLs de imágenes
  tags        String    // JSON array as string
  views       Int       @default(0) // Número de visitas
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
  features    Feature[]
  tasks       Task[]
  
  @@index([slug])
}

model Comment {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
}

model Feature {
  id          String        @id @default(cuid())
  title       String
  description String
  userName    String
  userEmail   String
  createdAt   DateTime      @default(now())
  projectId   String
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  votes       FeatureVote[]
  
  @@index([projectId])
}

model FeatureVote {
  id        String   @id @default(cuid())
  userName  String
  userEmail String
  createdAt DateTime @default(now())
  featureId String
  feature   Feature  @relation(fields: [featureId], references: [id], onDelete: Cascade)
  
  @@unique([featureId, userEmail])
  @@index([featureId])
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("pending") // pending, in-progress, completed
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
  @@index([order])
}

model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  type      String   // "comment", "vote", "feature"
  metadata  String   // JSON con datos adicionales (projectId, featureId, etc)
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([email, code])
  @@index([expiresAt])
}

model SiteStats {
  id        String   @id @default(cuid())
  visits    Int      @default(0)
  updatedAt DateTime @updatedAt
}

